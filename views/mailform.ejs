<!DOCTYPE html>
<html>
<head>
<title><%= title %></title>
<link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css" />
<script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
<script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"></script>
<script>
$(document).on('pageshow','#index',function(){
	sessionStorage.subject ? $('#subject').val(sessionStorage.subject) : $('#subject').val('');
	sessionStorage.name ? $('#name').val(sessionStorage.name) : $('#name').val('');
	sessionStorage.email ? $('#email').val(sessionStorage.email) : $('#email').val('');
	sessionStorage.content ? $('#content').val(sessionStorage.content) : $('#content').val('');

	$('form').on('submit',function(){
		sessionStorage.subject = $('#subject').val();
		sessionStorage.name = $('#name').val();
		sessionStorage.email = $('#email').val();
		sessionStorage.content = $('#content').val();
	});
});
</script>
</head>
  <body>
  	<div data-role="page" id="index">
  	<header data-role="header">
		<a href="/">TOP</a>
		<h1><%= title %></h1>
  	</header>
  	<section data-role="content">
	    <h2><%= title %></h2>
	    <p>以下のフォームに入力してください。</p>
	    <form id="test" method="post" action="confirm" data-ajax="false">
	    	<fieldset>
	    		<label for="subject">件名</label>
	    		<input type="text" name="subject" id="subject" placeholder="件名を入力してください" required>
	    	</fieldset>
	    	<fieldset>
	    		<label for="name">お名前</label>
	    		<input type="text" name="name" id="name" placeholder="あなたのお名前を入力してください" required>
	    	</fieldset>
	    	<fieldset>
	    		<label for="email">メールアドレス</label>
	    		<input type="email" name="email" id="email" placeholder="あなたのメールアドレスを入力してください" required>
	    	</fieldset>
	    	<fieldset>
	 		   	<label for="content">内容</label>
	  		  	<textarea name="content" id="content" placeholder="お問い合わせ内容を入力してください" required></textarea>
	    	</fieldset>
	    	<fieldset class="ui-grid-a">
	    		<div class="ui-block-a">
	    			<input type="reset" value="削除" data-theme="a">
	    		</div>
	    		<div class="ui-block-b">
	    			<input type="submit" value="確認" data-theme="b">
	    		</div>
	    	</fieldset>
	    </form>
    </section>
    <footer data-role="footer" data-position="fixed">
    	<h4>Copyright &copy; <%= copyright%></h4>
    </footer>
    </div>
  </body>
</html>